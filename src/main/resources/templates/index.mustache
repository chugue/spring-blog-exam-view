{{> layout/header}}

<div class="container p-5">

    <table class="table table-striped">
        <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>내용</th>
            <th>작성자</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#boardList}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{author}}</td>
                <td>
                    <div class="d-flex">
                        <form action="/board/1/updateForm" method="get">
                            <button class="btn btn-warning">수정</button>
                        </form>
                        <form action="#">
                            <button class="btn btn-danger">삭제</button>
                        </form>
                    </div>
                </td>
            </tr>
        {{/boardList}}
        </tbody>
    </table>
    <div class="bottom-paging">
        <ul class="pagination d-flex justify-contetn-center">
            <ul class="pagination pagination-md">
                <li class="page-item {{#firstPage}}disabled{{/firstPage}}"><a class="page-link" href="/page/{page}/prevPage">Previous</a>
                </li>
                <li class="page-item {{#firstPage}}active{{/firstPage}}"><a class="page-link" href="/page/1">1</a></li>
                <li class="page-item"><a class="page-link" href="/page/2">2</a></li>
                <li class="page-item"><a class="page-link" href="/page/3">3</a></li>
                <li class="page-item {{#lastPage}}disabled{{/lastPage}}"><a class="page-link" href="/page/{page}/nextPage">Next</a></li>
            </ul>
        </ul>
    </div>


</div>

{{> layout/footer}}